<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/chat_background"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:visibility="gone"
        android:id="@+id/message_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/user_icon" />

    <TextView
        android:visibility="gone"
        android:padding="5dp"
        android:text="message"
        android:id="@+id/tvDiplayContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginTop="15dp"
        android:layout_marginStart="55dp"
        android:background="@drawable/shape_message" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/imvImage"
        android:layout_width="270dp"
        android:layout_height="200dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_alignStart="@+id/tvDiplayContent"
        android:layout_below="@+id/message_image" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:visibility="gone"
        android:id="@+id/message_imagem"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/user_icon" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tvDiplayContentm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="69dp"
        android:background="@drawable/shape_message"
        android:padding="5dp"
        android:text="message" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/imvImagem"
        android:layout_width="270dp"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/message_image"
        android:layout_marginEnd="19dp" />
</RelativeLayout>