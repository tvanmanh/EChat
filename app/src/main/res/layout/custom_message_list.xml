<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingRight="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/user_icon"
        android:visibility="gone" />

    <TextView
        android:textSize="18dp"
        android:id="@+id/tvDiplayContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_message"
        android:padding="5dp"
        android:text="message"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imvImage"
        android:layout_width="270dp"
        android:layout_height="200dp"
        android:layout_alignStart="@+id/tvDiplayContent"
        android:layout_below="@+id/message_image"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:visibility="gone" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_imagem"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/user_icon"
        android:visibility="gone" />

    <TextView
        android:textSize="18dp"
        android:id="@+id/tvDiplayContentm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/shape_message"
        android:padding="5dp"
        android:text="message" />

    <ImageView
        android:id="@+id/imvImagem"
        android:layout_width="270dp"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/message_image"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="49dp"
        android:visibility="gone" />
</RelativeLayout>