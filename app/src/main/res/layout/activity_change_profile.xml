<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/manage_imvusericon"
            android:layout_marginTop="16dp"
            android:background="@null"
            civ_border_width="2dp"
            civ_border_color="#faf8f8"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/user_icon"/>
        <TextView
            android:id="@+id/change_tvname"
            android:textStyle="bold"
            android:textSize="28dp"
            android:layout_marginTop="5dp"
            android:text="John cal"
            android:layout_gravity="center"
            android:textColor="#faf7f7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/manage_imvjob"
        android:background="@null"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:src="@drawable/saying" />

    <EditText
        android:layout_marginEnd="16dp"
        android:textSize="16dp"
        android:textColor="#1e1d1d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/manage_imvjob"
        android:layout_toRightOf="@+id/manage_imvjob"
        android:text="life is beatiful!"
        android:id="@+id/change_tvsaying" />

    <ImageView
        android:src="@drawable/cup"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/manage_imvjob"
        android:layout_alignStart="@+id/manage_imvjob"
        android:layout_below="@+id/manage_imvjob"
        android:layout_marginTop="18dp"
        android:id="@+id/manage_imvcup" />

    <EditText
        android:layout_marginEnd="16dp"
        android:textSize="16dp"
        android:textColor="#1e1d1d"
        android:id="@+id/change_tvachivement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/change_tvsaying"
        android:layout_alignStart="@+id/change_tvsaying"
        android:layout_alignTop="@+id/manage_imvcup"
        android:text="My achivement" />

    <ImageView
        android:id="@+id/manage_imvcareer"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/manage_imvcup"
        android:layout_alignStart="@+id/manage_imvcup"
        android:layout_below="@+id/manage_imvcup"
        android:layout_marginTop="23dp"
        android:src="@drawable/career_icon" />

    <EditText
        android:layout_marginEnd="16dp"
        android:textSize="16dp"
        android:textColor="#1e1d1d"
        android:id="@+id/change_tvcareer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/change_tvachivement"
        android:layout_alignStart="@+id/change_tvachivement"
        android:layout_alignTop="@+id/manage_imvcareer"
        android:text="My career" />

    <ImageView
        android:id="@+id/manage_imvschool"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/manage_imvcareer"
        android:layout_alignStart="@+id/manage_imvcareer"
        android:layout_below="@+id/manage_imvcareer"
        android:layout_marginTop="20dp"
        android:src="@drawable/student" />

    <EditText
        android:layout_marginEnd="16dp"
        android:textSize="16dp"
        android:textColor="#1e1d1d"
        android:id="@+id/change_tvschool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/change_tvcareer"
        android:layout_alignStart="@+id/change_tvcareer"
        android:layout_alignTop="@+id/manage_imvschool"
        android:text="My school" />

    <ImageView
        android:id="@+id/manage_imvlocation"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/manage_imvschool"
        android:layout_alignStart="@+id/manage_imvschool"
        android:layout_below="@+id/manage_imvschool"
        android:layout_marginTop="26dp"
        android:src="@drawable/home" />

    <EditText
        android:layout_marginEnd="16dp"
        android:textSize="16dp"
        android:textColor="#1e1d1d"
        android:id="@+id/change_tvlocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/change_tvschool"
        android:layout_alignStart="@+id/change_tvschool"
        android:layout_alignTop="@+id/manage_imvlocation"
        android:text="My home address" />

    <Button
        android:id="@+id/change_btnchange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/change_tvlocation"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/change_tvlocation"
        android:text="save changes"
        android:textColor="#0d36d9" />

    <TextView
        android:id="@+id/change_tvchangeavatar"
        android:textColor="#001550"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/change_btnchange"
        android:layout_alignBottom="@+id/change_btnchange"
        android:layout_alignLeft="@+id/change_tvlocation"
        android:layout_alignStart="@+id/change_tvlocation"
        android:text="Change avatar?" />
</RelativeLayout>
